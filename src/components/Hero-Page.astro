---
import { Image } from "astro:assets";
import Heading from "./Heading.astro";

interface Props {
  pageTitle: string; 
  pageImage: { 
    src: string; 
    width: number; 
    height: number; 
    format: "png" | "jpg" | "jpeg" | "tiff" | "webp" | "gif" | "svg" | "avif"; 
  }
}

const { pageTitle, pageImage } = Astro.props;
---

<div class="relative hero bg-base-200 min-h-[50vh] dark:bg-red-50">
  <Image
    src={pageImage}
    class="absolute top-0 right-0 w-screen h-[50vh] object-cover blur-xs overflow-hidden"
    alt={pageTitle} 
    width="1920"
    height="1080"
    loading="eager"
  />
  <div class="hero-content flex-col lg:flex-row-reverse gap-20 z-10">
    <div>
      <Heading
        as="h1"
        size="xxxxl"
        fontweight="black"
        class="opacity-70 text-gray-500 dark:text-gray-500 capitalize tracking-widest drop-shadow-xl"
        >{pageTitle}</Heading
      >
    </div>
  </div>
</div>
